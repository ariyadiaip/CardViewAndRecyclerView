<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardViewActivity">

    <ImageView
        android:id="@+id/bgHeader"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:background="@drawable/bgheader"/>

    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/userpic"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Neutron Smith"
        android:textColor="@android:color/white"
        android:fontFamily="@font/mr"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_toRightOf="@+id/imgProfile"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/usd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USD Wallet"
        android:textColor="@android:color/white"
        android:fontFamily="@font/ml"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/imgProfile"
        android:layout_marginTop="50dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgmenus"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Main Menus"
            android:textSize="11sp"
            android:fontFamily="@font/mr"
            android:layout_margin="10dp"/>
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="1"
            android:layout_margin="20dp"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="18dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/iclist"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Review"
                    android:fontFamily="@font/mm"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="18dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icnet"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Network"
                    android:fontFamily="@font/mm"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="18dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icplug"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plugins"
                    android:fontFamily="@font/mm"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="8dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icapps"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apps"
                    android:fontFamily="@font/mm"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </GridLayout>

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/icguide"
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_below="@id/cardView"
        android:src="@drawable/icguide"/>
    <TextView
        android:id="@+id/NeedAGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Need a Guide ?"
        android:layout_below="@id/icguide"
        android:fontFamily="@font/mm"/>
    <TextView
        android:id="@+id/wehelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ml"
        android:layout_below="@id/NeedAGuide"
        android:layout_centerHorizontal="true"
        android:textSize="10dp"
        android:text="We will give directions \nto the new user"/>
    <Button
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_below="@id/wehelp"
        android:text="Guide Me"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:fontFamily="@font/mm"
        android:textSize="11dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/bgbtnguide" />

</RelativeLayout>